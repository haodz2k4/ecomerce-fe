{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",  
    "target": "ES6",
    "jsx": "react-jsx",  
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
